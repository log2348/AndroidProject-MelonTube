<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/underline_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/albumInfoImage"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/black" />

        <TextView
            android:id="@+id/albumInfoTitle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="Album Title"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@id/albumInfoImage"
            app:layout_constraintTop_toTopOf="@id/albumInfoImage" />

        <TextView
            android:id="@+id/albumSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="singer"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@id/albumInfoTitle"
            app:layout_constraintTop_toBottomOf="@id/albumInfoTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>